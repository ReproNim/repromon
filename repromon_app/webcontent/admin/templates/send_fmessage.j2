<body>
    <head>
        <title>ReproMon Send Feedback Screen Message</title>
        <link rel="STYLESHEET" href="{{ url_for('static', path='/css/main.css') }}" type="text/css">
    </head>
<body>
    <h3>ReproMon Send Feedback Screen Message</h3>
    <form method="post" action="send_fmessage_ctl">
        <input type="hidden" name="action" value="send_fmessage_ctl"/>
        <table>
            <tr>
                <td>Username:</td>
                <td><input type="text" name="username" value="{{username}}"/></td>
            </tr>
            <tr>
                <td>Study ID:</td>
                <td><input type="text" name="study_id" value="1"/></td>
            </tr>
            <tr>
                <td>Level:</td>
                <td>
                    <select name="level_id" value="1" style="width: 120px;">
                       {% for level in levels %}
                       <option value="{{level.id}}">{{level.level}}</option>
                       {% endfor %}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Provider:</td>
                <td>
                   <select name="provider_id" value="3" style="width: 120px;"/>
                        {% for provider in providers %}
                        <option value="{{provider.id}}">{{provider.provider}}</option>
                        {% endfor %}
                   </select>
                </td>
            </tr>
            <tr>
                <td>Description:</td>
                <td><input type="text" style="width:400px;" name="description" value="Some message"/></td>
            </tr>
            <tr>
                <td>Payload:</td>
                <td><textarea name="payload" style="width:400px;" rows="10">{}</textarea></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Send Message" /></td>
            </tr>
        </table>
    </form><br>

</body>
</html>
